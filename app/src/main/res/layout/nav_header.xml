        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/emailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nivasa123456789@gmail.com"
        android:textSize="15sp"
        />


</LinearLayout>